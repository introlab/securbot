<!--

    V4L2 - Need to install apt-get install libv4l-dev v4l2loopback-utils v4l2loopback-dkms

    Create virtual device (can create multiple devices):
    sudo modprobe v4l2loopback video_nr=2,3 card_label="VirtualCamHead","VirtualCamNav"


-->

<launch>
    <node pkg="securbot_pkg" type="createVirtualCamera.sh" name="v4l2"></node>
    <node pkg="image_capture" type="virtualcam_node" name="virtualcam_node" output="screen">
        <param name="image_topic" value="/camera/rgb/image_rect_color" />        
        <param name="virtual_dev" value="/dev/video1" />
        <!--param name="image_width" value="1280"/>
        <param name="image_height" value="720"/-->  
    </node>
</launch>
