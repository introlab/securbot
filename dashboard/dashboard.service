[Unit]
Description=Renders the Jira dashboard
After=network.service
Documentation=https://github.com/introlab/securbot/dashboard

[Service]
User=root
WorkingDirectory=/opt/securbot/dashboard/
ExecStart=/usr/bin/node /opt/securbot/dashboard/scheduledRender.js
Restart=always

[Install]
WantedBy=multi-user.target
